<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="stats">
      </section>
    </aside>
    <label class="button-inline">
      <%= button_to t("words_list"), words_path, class: "btn btn-lg btn-primary", method: :get %>
    </label>
    <label class="button-inline">
      <%= button_to t("categories"), categories_path,
        class: "btn btn-lg btn-primary", method: :get %>
    </label>
        <%= render "shared/stats" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t "activity" %></h3>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t "welcome" %></h1>
    <%= link_to t("startnow"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
